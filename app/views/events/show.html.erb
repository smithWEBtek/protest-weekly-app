<p id="notice"><%= notice %></p>

<div class="center">

	<div class="info">
		<p><strong>Name:</strong> <%= @event.name %></p>
		<p><strong>Cause:</strong> <%= @event.cause %></p>
		<p><strong>Date and time:</strong> <%= @event.datetime %> </p>
		<p><strong>Organization:</strong> <%= @event.organization.name %></p>
		<%yield%>
			<%= render 'venues/form', f: f %>
			<%= form_for(:event, method: 'post') do |f| %>
			<%= f.hidden_field :user_id, value: current_user.id %>
			<%= f.hidden_field :event_id, value: @event.id %>
			
			<%= f.submit "Check out this event" %>
			<% end %>
			<% end %>
			<%= link_to "Back", events_path, class: "btn btn-primary btn-light" %></p>	