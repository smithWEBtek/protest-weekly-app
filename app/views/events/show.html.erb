<h1>Event</h1>

<!--this view should list event info and opportunity to sign up,indicate if ride is needed and can drive in car pool-->
<% if current_user.admin %>
			<%= link_to "New Event", [:new, @event] %><br>
			<% else %>
			<%= form_for(:event, method: 'post') do |f| %>
			<%= f.hidden_field :user_id, value: current_user.id %>
			<%= f.hidden_field :event_id, value: @event.id %>
			<%= f.submit "Check out this event" %>
			<% end %>
			<% end %>
