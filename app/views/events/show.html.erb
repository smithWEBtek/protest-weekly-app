<h1>Event</h1>

		<p><%= @event.name %></p>
		<p><%= @event.cause %></p>
		<p><%= @event.location %></p>
		<p><%= @event.datetime %></p>
		<p><%= @event.organization.name %></p>
		<p><%= @event.organization.contact_info %></p>

		<%= event_form.fields_for :event_users do |f| %>
			<%= f.hidden_field :user_id, value: current_user.id %>
			<%= f.hidden_field :event_id, value: @event_user.id %><br />
			<h2>RSVP</h2>
		  	<%= f.label :RSVP %><br />
		  	<%= f.label :RSVP, "Yes", :value => "true"  %>
		  	<%= f.radio_button :RSVP, true, !!params[:RSVP] %>
		  	<%= f.label :RSVP, "No", :value => "false" %>
		  	<%= f.radio_button :RSVP, false, !!params[:RSVP] %>

		    <h2>Car Pool</h2>
		  	<%= f.label :need_ride %><br />
		  	<%= f.label :need_ride, "Yes", :value => "true"  %>
		  	<%= f.radio_button :need_ride, true, !!params[:need_ride] %>
		  	<%= f.label :need_ride, "No", :value => "false" %>
		  	<%= f.radio_button :need_ride, false, !!params[:need_ride] %>

		  	<%= f.label :can_drive %><br />
		  	<%= f.label :can_drive, "Yes", :value => "true"  %>
		  	<%= f.radio_button :can_drive, true, !!params[:can_drive] %>
		  	<%= f.label :can_drive, "No", :value => "false" %>
		  	<%= f.radio_button :can_drive, false, !!params[:can_drive] %>
			
			<% end %>

			<% submit_tag %>

	
		
	<%= link_to "Back", events_path, class: "btn btn-primary btn-light" %>	
