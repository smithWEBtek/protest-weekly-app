<h1>Events</h1>

<table class="table">
	<thead>
		<tr>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td><strong>Name</strong></td>
			<td><strong>Cause</strong></td>
			<td><strong>Organization</strong></td>
			<td><strong>Venue</strong></td>
		</tr>
		<% @events.each do |event| %>
		<tr>

			<td><%= event.name %></td>
			<td><%= event.cause %></td>
			<td><%= organization.name %></td>
			<td><%= venue.name %></td>

			<% if current_user.admin %>
			<td><%= link_to "Show #{event.name}", event_path(event) %></td>
			
			<% else %>
			<td><%= link_to "RSVP for #{event.name}", event_path(event) %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>
<br>

<% if @user %>
<br>
	<%= link_to "Back to profile", user_path(@user), { :class => "btn btn-primary" } %>
	<br>
	<% else %>
	<br><%= link_to "New Event", new_event_path %> <br>
<% end %>
