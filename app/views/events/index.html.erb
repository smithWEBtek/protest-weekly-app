<h1>Events</h1>
<div class="events">
 <table class="table">
	<thead>
		<tr>
			<th colspan="6"></th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td><strong>Name</strong></td>
			<td><strong>Cause</strong></td>
			<td><strong>Location</strong></td>
			<td><strong>Datetime</strong></td>
			<td><strong>Organization</strong></td>		
		</tr>

		<% @events.each do |event| %>
		<tr>
			<td><%= link_to event.name, event_path(event), :class => "load_events" %></td>
			
			<td><%= event.cause %></td>
			<td><%= event.location %></td>
			<td><%= event.datetime.strftime("%A, %B %d, %Y at %H:%M") %></td>
			<td><%= event.organization.name %></td>
			
		</tr>
	 <% end %>
	</tbody>
</table>
	
	</div>
<br>
	<br>
	<br>

	<button id='new-event'><%= link_to "Create Event", new_event_path %></button>
	<p><%= link_to "Past Events", events_past_events_path %> </p>


