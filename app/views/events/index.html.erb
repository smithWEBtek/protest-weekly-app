<h1>Events</h1>

<table class="table">
	<thead>
		<tr>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<tr>
			<td><strong>Name</strong></td>
			<td><strong>Cause</strong></td>
			
		</tr>
		<% @events.each do |event| %>
		<tr>
			<td><%= event.name %></td>
			<td><%= event.cause %></td>
			
		<% end %>
		</tr>
		
	</tbody>
</table>
<br>
	<br><%= link_to "Edit Event", edit_event_path(@events) %><br>
	<br><%= link_to "New Event", new_event_path %> <br>



