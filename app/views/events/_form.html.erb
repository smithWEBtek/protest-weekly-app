<%= form_for(@event, url: events_path) do |f| %>

<div class="form-group">
	<%= f.label :name %><br>
	<%= f.text_field :name, class: "form-control" %> </div>

<div class="form-group">
	<%= f.label :cause %><br>
	<%= f.text_field :cause, class: "form-control" %> </div>

<div class="form-group">
	<%= f.label :location %><br>
	<%= f.text_field :location, class: "form-control" %></div>

<div class="actions">
	<%= f.submit class: "btn btn-primary" %>
</div>

<% end %>
			

 