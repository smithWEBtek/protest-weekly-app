<%= form_for(@event, url: events_path) do |f| %>

<div class="form-group">
	<%= f.label :name %><br>
	<%= f.text_field :name, class: "form-control" %> </div>

<div class="form-group">
	<%= f.label :cause %><br>
	<%= f.text_field :cause, class: "form-control" %> </div>

<div class="form-group">
	<%= f.label :datetime %><br>
	<%= f.text_field :datetime, class: "form-control" %></div>

<div class="field">
	<%= f.label :name, "Select organization name" %><br>
	<%= f.collection_select(:id, @organizations, :id, :name, {include_blank: "Please select or type in organization name"})%>
	</div>

<div class="actions">
	<%= f.submit class: "btn btn-primary" %>
</div>

<% end %>
			

 