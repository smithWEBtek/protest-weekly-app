<%= form_for @event do |f| %>

<div class="form-group">
	<%= f.label :name %><br>
	<%= f.text_field :name, class: "form-control" %> </div>

<div class="form-group">
	<%= f.label :cause %><br>
	<%= f.text_field :cause, class: "form-control" %> </div>

<div class="form-group">
	<%= f.label :datetime %><br>
	<%= f.text_field :datetime, class: "form-control" %></div>

<%= render 'organizations/new' %>


	
<div class="actions">
	<%= f.submit class: "btn btn-primary" %>
</div>

<% end %>
			
			