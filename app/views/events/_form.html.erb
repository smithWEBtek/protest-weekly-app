<%= form_for(@event) do |f| %>

<div class="form-group">
	<%= f.label :name %><br>
	<%= f.text_field :name, class: "form-control" %> </div>

<div class="form-group">
	<%= f.label :cause %><br>
	<%= f.text_field :cause, class: "form-control" %> </div>

<div class="form-group">
	<%= f.label :datetime %><br>
	<%= f.text_field :datetime, class: "form-control" %></div>

<div class="form-group">
	<%= f.label  :organization_name %><br>
	<%= f.text_field :organization_name, class: "form-control" %></div> 

<div class="form-group">
	<%= f.label  :organization_contact_info %><br>
	<%= f.text_area_field :organization_contact_info, class: "form-control" %></div> 

<div class="form-group">
	<%= f.label :venue_name %><br>
	<%= f.text_field :venue_name, class: "form-control" %></div> 

<div class="form-group">
	<%= f.label :venue_street_address %><br>
	<%= f.text_field :venue_street_address, class "form-control" %></div>

<div class="form-group">
	<%= f.label :venue_city %><br>
	<%= f.text_field :venue_city, class "form-control" %></div>

<div class="form-group">
	<%= f.label :venue_state %><br>
	<%= f.text_field :venue_state, class "form-control" %></div>
	
<div class="actions">
	<%= f.submit class: "btn btn-primary" %>
</div>

<% end %>
			
			